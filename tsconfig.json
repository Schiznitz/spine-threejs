{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES6",
    "module": "ES2015",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": [
      "DOM",
      "ES2015"
    ],
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
  }
}